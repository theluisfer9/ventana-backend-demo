# Environment LOCAL or PROD
ENV=LOCAL
API_VERSION=1
RESPONSE_ENCRYPTION_ENABLED=true
RESPONSE_ENCRYPTION_KEY_B64=

# -------------------------------------------------
# JWT Configuration
# -------------------------------------------------
JWT_SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# -------------------------------------------------
# Local Environment Config
# -------------------------------------------------

# PostgreSQL Database
LOCAL_DB_USERNAME='postgres'
LOCAL_DB_PASSWORD='postgres'
LOCAL_DB_CONTAINER_NAME='localhost'
LOCAL_DB_PORT='5432'
LOCAL_DB_NAME='pantalla_magica'
LOCAL_DB_ACTIVA='true'

# SQL Server (optional)
LOCAL_DB_USERNAME_SQL=''
LOCAL_DB_PASSWORD_SQL=''
LOCAL_DB_CONTAINER_NAME_SQL=''
LOCAL_DB_PORT_SQL=''
LOCAL_DB_NAME_SQL=''
LOCAL_DB_ACTIVA_SQL='false'
LOCAL_DB_SQL_ODBC_DRIVER="ODBC Driver 17 for SQL Server"

# ClickHouse RSH (optional)
LOCAL_CH_HOST='localhost'
LOCAL_CH_PORT='8123'
LOCAL_CH_USER='default'
LOCAL_CH_PASSWORD=''
LOCAL_CH_DATABASE='rsh'
LOCAL_CH_SECURE='false'
LOCAL_CH_ACTIVA='false'

